<header class="flex flex-row flex-wrap items-center justify-between w-full px-4 py-8 bg-black md:px-10 md:justify-start" x-data="{ isOpen: false }" @keydown.escape="isOpen = false">
	{% if entry.headerContent.logo|length %}
		{% set logo = entry.headerContent.logo.one().optimizedImages %}
		{% set logoAltText = entry.headerContent.logo.one().title %}
		{% include "_tacos-el-gallo/_snippets/logo" %}
	{% else %}
		{% include "_tacos-el-gallo/_snippets/site-title" %}
	{% endif %}
	<button @click="isOpen = !isOpen" type="button" class="block px-2 md:hidden text-tag-yellow hover:text-tag-red focus:outline-none" :class="{ 'transition transform-180': isOpen }">
		<svg class="w-6 h-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
			<path x-show="isOpen" fill-rule="evenodd" clip-rule="evenodd" d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"/>
			<path x-show="!isOpen" fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
		</svg>
	</button>
	<nav class="flex flex-col justify-between flex-grow w-full mt-8 md:mt-0 md:ml-10 md:flex-row md:w-auto" :class="{ 'hidden md:flex': !isOpen }" @click.away="isOpen = false" x-show="true" x-transition:enter="ease-out duration-200" x-transition:enter-start="opacity-0 transform" x-transition:enter-end="opacity-100 transform" x-transition:leave="ease-in duration-200" x-transition:leave-start="opacity-100 transform" x-transition:leave-end="opacity-0 transform">
		{% set listClasses = 'flex flex-col md:flex-row flex-wrap items-center justify-center md:space-x-8 space-y-4 md:space-y-0 mb-4 md:mb-0 md:p-4' %}
		{% set navList = entry.headerContent.navigation.all() %}
		{% include "_tacos-el-gallo/_content/nav-item-list" %}
		{% set socialMediaList = entry.headerContent.socialMediaAccounts.all() %}
		{% include "_tacos-el-gallo/_content/social-media-links" %}
	</nav>
	{% if entry.announcementModalDescription|length %}
		<div id="alert-modal-overlay" class="absolute top-0 left-0 z-50 flex flex-col items-center justify-center w-screen h-screen bg-black bg-opacity-50" x-show="open" x-bind:class="{ 'overflow-hidden': open }" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform" x-transition:enter-end="opacity-100 transform" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100 transform" x-transition:leave-end="opacity-0 transform">
			<div class="flex flex-col items-center max-w-xs overflow-hidden text-center border-4 shadow-2xl bg-imp-aqua border-imp-gold" @click.away="open = false" x-bind:class="{ 'overflow-hidden': open }" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-90" x-transition:enter-end="opacity-100 transform scale-100" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100 transform scale-100" x-transition:leave-end="opacity-0 transform scale-90">
				<button class="self-end m-2 text-2xl leading-none text-imp-red" type="button" @click="open = false">
					<i class="fas fa-times"></i>
				</i>
			</button>
			<div class="px-4 pb-4 text-black imp">
				{{ entry.announcementModalDescription }}
			</div>
		</div>
	</div>
{% endif %}
</header>
