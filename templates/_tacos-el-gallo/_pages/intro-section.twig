<section class="flex flex-row w-full bg-no-repeat bg-cover bg-position bg-tag-dark-teal" style="{% if entry.introSectionContent.backgroundImage.one()|length %} {% set backgroundImage = entry.introSectionContent.backgroundImage.one().getUrl() %}background-image: url('{{ backgroundImage }}');{% endif %} height: 66vh;">
	{% set navBtnList = entry.headerContent.navigation.visibleInIntroSection(true).all() %}
	{% set ctaText = entry.introSectionContent.callToActionText %}
	{% set ctaLink = entry.introSectionContent.callToActionLink %}

	<div id="alert-modal-overlay" class="absolute top-0 left-0 z-50 flex flex-col items-center justify-center w-screen h-screen bg-black bg-opacity-50" x-show="open" x-bind:class="{ 'overflow-hidden': open }" x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 transform"
    x-transition:enter-end="opacity-100 transform"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100 transform"
    x-transition:leave-end="opacity-0 transform">
		<div class="flex flex-col items-center max-w-xs overflow-hidden text-center border-4 shadow-2xl bg-tag-teal border-tag-yellow" @click.away="open = false" x-bind:class="{ 'overflow-hidden': open }" x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 transform scale-90"
    x-transition:enter-end="opacity-100 transform scale-100"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100 transform scale-100"
    x-transition:leave-end="opacity-0 transform scale-90">
			<button class="self-end m-2 text-2xl leading-none text-tag-red" type="button" @click="open = false">
				<i class="fas fa-times"></i>
			</i>
		</button>
		<div class="px-4 pb-4 text-black tag">
			{{ entry.announcementModalDescription }}
		</div>
	</div>
</div>
<nav class="flex flex-col items-center justify-center w-full md:w-1/2">
	{% include "_tacos-el-gallo/_content/nav-btn-list" %}
</nav></section>