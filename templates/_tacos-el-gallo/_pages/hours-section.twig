<section class="flex flex-col items-center w-full px-6 py-16 bg-tag-teal angled-bottom">
	<div class="flex flex-col items-center w-full max-w-screen-xl mb-12">
		{% set sectionHeader = entry.hoursSectionContent.sectionHeader %}
		{% set address = entry.hoursSectionContent.address %}
		{% set hours = entry.hoursSectionContent.hours %}
		{% set phoneNumber = entry.hoursSectionContent.phoneNumber %}
		{% set bodyText = entry.hoursSectionContent.bodyText %}
		{% set ctaText = entry.hoursSectionContent.callToActionText %}
		{% set ctaLink = entry.hoursSectionContent.callToActionLink %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		<div class="flex flex-col items-center w-full p-4 md:hidden">
			<address class="not-italic">
				<a href="https://goo.gl/maps/b1R88RrjJU2dZ4cE6" target="_blank">
					<h2 class="text-center text-tag-light-grey tag">{{ address | nl2br }}</h2>
				</a>
			</address>
			<div>
				<h2 class="my-2 text-center text-tag-dark-red tag">{{ hours | nl2br }}</h2>
			</div>
			<div>
				<h2 class="text-tag-dark-red tag">{{ phoneNumber }}</h2>
			</div>
		</div>
		<div class="flex flex-row items-stretch w-full h-64 p-4 border-4 border-tag-yellow md:h-auto" style="{% if entry.hoursSectionContent.map.one()|length %} {% set map = entry.hoursSectionContent.map.one().getUrl() %}background: url('{{ map }}') no-repeat right/cover;{% endif %}">
			<div class="flex-col items-center hidden h-full p-4 md:flex md:w-2/5 lg:w-1/3 bg-tag-teal bg-opacity-85">
				<address class="not-italic">
					<a href="https://goo.gl/maps/b1R88RrjJU2dZ4cE6" target="_blank">
						<h2 class="text-center cursor-pointer text-tag-light-grey tag">{{ address | nl2br }}</h2>
					</a>
				</address>
				<div>
					<h2 class="my-2 text-center text-tag-dark-red tag">{{ hours | nl2br }}</h2>
				</div>
				<div>
					<a href="tel:1-828-254-8980">
						<h2 class="text-tag-dark-red tag">{{ phoneNumber }}</h2>
					</a>
				</div>
				<article class="mb-4 text-center text-black tag">
					{{ bodyText }}
				</article>
				{% if ctaText|length %}
					{% include "_tacos-el-gallo/_snippets/btn-main.twig" %}
				{% endif %}
			</div>
			<div class="w-full h-auto cursor-pointer md:w-2/3" onclick="location.href='https://goo.gl/maps/b1R88RrjJU2dZ4cE6';"></div>
		</div>
		<div class="flex flex-col items-center w-full p-4 md:hidden">
			<article class="mb-4 text-center text-black tag">
				{{ bodyText }}
			</article>
			{% if ctaText|length %}
				{% include "_tacos-el-gallo/_snippets/btn-main.twig" %}
			{% endif %}
		</div>
	</div>
</section>
