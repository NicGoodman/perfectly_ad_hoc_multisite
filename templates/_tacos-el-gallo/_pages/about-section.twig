<section class="w-full flex flex-col items-center px-6 bg-tag-light-grey py-16 angled-both">
	<div class="w-full max-w-screen-xl flex flex-col items-center mb-12">
		{% set sectionHeader = entry.aboutSectionContent.sectionHeader %}
		{% set sectionContent = entry.aboutSectionContent.sectionContent %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		<article class="flex flex-col md:flex-row flex-wrap">
			{% for block in sectionContent.all() %}
				{% switch block.type %}
					{% case "subheading" %}
						{% include "_tacos-el-gallo/_snippets/subheading.twig" %}
					{% case "image" %}
						{% set image = block.image.one().getUrl() %}
						{% set overlayHeader = block.overlayHeader %}
						{% set overlaySubheader = block.overlaySubheader %}
						{% set overlayBodyText = block.overlayBodyText %}
						<div class="w-full md:w-1/3 border-4 border-tag-yellow p-4 flex flex-col items-start justify-end" style="background: url('{{ image }}') no-repeat center/cover;">
							<div class="flex flex-col items-center p-4 w-full mt-32 bg-tag-teal">
								<header>
									<h2 class="tag">{{ overlayHeader }}</h2>
									<h3 class="tag">{{ overlaySubheader }}</h2>
								</header>
								<article class="tag">
									{{ overlayBodyText }}
								</article>
							</div>
						</div>
					{% case "bodyText" %}
						<article class="tag w-full md:w-2/3 text-center px-20">
							{{ block.bodyText }}
						</article>
				{% endswitch %}
			{% endfor %}
		</article>
	</div>
</section>
