<section class="w-full flex flex-col items-center px-6 bg-tag-light-grey py-16 angled-both">
	<div class="w-full max-w-screen-xl flex flex-col items-center mb-12">
		{% set sectionHeader = entry.aboutSectionContent.sectionHeader %}
		{% set sectionContent = entry.aboutSectionContent.sectionContent %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		<article class="flex flex-col flex-wrap items-center">
			{% for block in sectionContent.all() %}
				{% switch block.type %}
					{% case "bodyText" %}
						<article class="tag w-full md:w-2/3 text-center md:px-20 py-8">
							{{ block.bodyText }}
						</article>
				{% endswitch %}
			{% endfor %}
			<div class="flex flex-col md:flex-row flex-wrap space-y-8 space-x-8">
				{% for block in sectionContent.all() %}
					{% switch block.type %}
						{% case "image" %}
							{% set image = block.image.one().getUrl() %}
							{% set overlayHeader = block.overlayHeader %}
							{% set overlaySubheader = block.overlaySubheader %}
							{% set overlayBodyText = block.overlayBodyText %}
							<div class="w-full md:w-1/3 border-4 border-tag-yellow p-4 flex flex-col justify-end items-stretch" style="background: url('{{ image }}') no-repeat center/cover;">
								<div class="flex flex-col items-start p-4 w-full bg-tag-teal">
									<header class="mb-2">
										<h2 class="tag leading-none">{{ overlayHeader }}</h2>
										<h5 class="tag text-tag-red">{{ overlaySubheader }}</h5>
									</header>
									<article class="tag">
										{{ overlayBodyText }}
									</article>
								</div>
							</div>
					{% endswitch %}
				{% endfor %}
			</div>
		</article>
	</div>
</section>
