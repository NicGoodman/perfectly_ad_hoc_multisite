<section class="flex flex-col items-center w-full px-6 py-16 bg-tag-teal angled-both">
	<div class="flex flex-col items-center w-full max-w-screen-xl mb-12">
		{% set sectionHeader = entry.aboutSectionContent.sectionHeader %}
		{% set sectionContent = entry.aboutSectionContent.sectionContent %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		<article class="flex flex-col flex-wrap items-center">
			{% for block in sectionContent.all() %}
				{% switch block.type %}
					{% case "bodyText" %}
						<article class="w-full py-8 text-center tag md:px-28">
							{{ block.bodyText }}
						</article>
				{% endswitch %}
			{% endfor %}
			<div class="flex flex-col flex-wrap items-stretch md:flex-row">
				{% for block in sectionContent.all() %}
					{% switch block.type %}
						{% case "image" %}
							{% set image = block.image.one().getUrl() %}
							{% set overlayHeader = block.overlayHeader %}
							{% set overlaySubheader = block.overlaySubheader %}
							{% set overlayBodyText = block.overlayBodyText %}
							<div class="w-full p-4 md:w-1/2 lg:w-1/3">
								<div class="flex flex-col items-center justify-end w-full h-full p-4 border-4 border-tag-yellow" style="background: url('{{ image }}') no-repeat center/cover;">
									<div class="flex flex-col items-start w-full p-4 mt-64 bg-tag-teal">
										<header class="mb-2">
											<h2 class="leading-none tag">{{ overlayHeader }}</h2>
											<h5 class="font-bold tag text-tag-dark-red">{{ overlaySubheader }}</h5>
										</header>
										<article class="tag">
											{{ overlayBodyText }}
										</article>
									</div>
								</div>
							</div>
					{% endswitch %}
				{% endfor %}
			</div>
		</article>
	</div>
</section>
