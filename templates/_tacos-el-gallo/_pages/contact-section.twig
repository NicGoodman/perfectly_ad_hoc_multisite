<section class="w-full flex flex-col items-center px-6 bg-tag-light-grey py-16 angled-both">
	<div class="w-full max-w-screen-xl flex flex-col items-center mb-12">
		{% set sectionHeader = entry.contactUsSectionContent.sectionHeader %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		{% macro errorList(errors) %}
			{% if errors %}
				<ul class="errors">
					{% for error in errors %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			{% endif %}
		{% endmacro %}

		{% from _self import errorList %}

		<form method="post" action="" accept-charset="UTF-8" class="flex flex-col w-full md:w-2/3">
			{{ csrfInput() }}
			<input type="hidden" name="action" value="contact-form/send">
			{{ redirectInput('contact/thanks') }}
			<div class="flex flex-row mb-2">
				<h3 class="w-32">
					<label for="from-name">Your Name</label>
				</h3 class="w-32">
				<input id="from-name" type="text" name="fromName" value="{{ message.fromName ?? '' }}" class="w-full">
				{{ message is defined and message ? errorList(message.getErrors('fromName')) }}
			</div>

			<div class="flex flex-row mb-2">
				<h3 class="w-32">
					<label for="from-email">Your Email</label>
				</h3 class="w-32">
				<input id="from-email" type="email" name="fromEmail" value="{{ message.fromEmail ?? '' }}" class="w-full">
				{{ message is defined and message ? errorList(message.getErrors('fromEmail')) }}
			</div>
			<div class="flex flex-row mb-2">
				<h3 class="w-32">
					<label for="subject">Subject</label>
				</h3 class="w-32">
				<input id="subject" type="text" name="subject" value="{{ message.subject ?? '' }}" class="w-full">
				{{ message is defined and message ? errorList(message.getErrors('subject')) }}
			</div>
			<div class="flex flex-col">
			<h3 class="w-32">
				<label for="message">Message</label>
			</h3 class="w-32">
			<textarea rows="10" cols="40" id="message" name="message">{{ message.message ?? '' }}</textarea>
			{{ message is defined and message ? errorList(message.getErrors('message')) }}
			</div>

			<input type="submit" value="Send">
		</form>
	</div>
</section>
