<section class="w-full flex flex-col items-center px-6 bg-tag-light-grey py-16 angled-both" x-data="{selected:null}">
	<div class="w-full max-w-screen-xl flex flex-col items-center mb-12">
		{% set sectionHeader = entry.menusSectionContent.sectionHeader %}
		{% set bodyText = entry.menusSectionContent.bodyText %}
		{% set ctaText = entry.menusSectionContent.callToActionText %}
		{% set ctaLink = entry.menusSectionContent.callToActionLink %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_tacos-el-gallo/_snippets/heading" %}
		<div class="flex flex-col md:flex-row flex-wrap justify-around items-center">
			<article class="tag w-full md:w-3/5 text-left">
				{{ bodyText }}
			</article>
			{% include "_tacos-el-gallo/_snippets/btn-main.twig" %}
		</div>
		<div class="flex flex-row flex-wrap w-full justify-around items-center">
			{% for row in entry.menus.all() %}
				{% set menuName = row.menuName %}
				{% set menuIcon = row.menuIcon.one().optimizedImages %}

				<div class="flex flex-col items-center w-40 cursor-pointern text-tag-teal hover:text-tag-dark-teal" @click="selected !== {{ loop.index }} ? selected = {{ loop.index }} : selected = null">
					<img src="{{ menuIcon.src }}" data-srcset="{{ menuIcon.srcset }}" alt="">
					<h2 class="tag">{{ menuName }}</h2>
				</div>
			{% endfor %}
		</div>
		<div class="w-full md:w-2/3 mt-8">
			{% for row in entry.menus.all() %}
				{% set menuContent = row.menuContent %}
				{% for block in menuContent.all() %}
					{% set itemName = block.itemName %}
					{% set itemDescription = block.itemDescription %}
					{% set price = block.prices %}
					{% set priceDescription = block.priceDescription %}
					<div id="menu-item-wrapper" class="flex flex-col w-full mb-4" x-show="selected == {{ loop.index }}">
						<div id="menu-item-top-line" class="flex flex-row justify-between w-full">
							<div class="text-left">
								<h3 class="tag">{{ itemName }}</h3>
							</div>
							<div class="text-right pl-10">
								<h3 class="tag text-tag-red">{{ price }}</h3>
							</div>
						</div>
						<div id="menu-item-bottom-line" class="flex flex-row justify-between w-full">
							<div class="text-left">
								<p class="tag">{{ itemDescription | nl2br }}</p>
							</div>
							<div class="text-right pl-10">
								<p class="tag text-tag-dark-teal">{{ priceDescription }}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	</div>
</section>
