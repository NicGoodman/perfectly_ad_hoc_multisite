<section class="w-full flex flex-col items-center px-6 py-16 bg-tag-teal h-full flex-grow">
	<div class="w-full max-w-screen-xl">
		<div class="w-full flex flex-row flex-wrap">
				{% set variant = product.defaultVariant %}
				{% set productImage = product.defaultVariant.productImage.one().optimizedImages %}

				<div class="w-1/2 md:w-1/4 flex flex-col items-center p-4">
					<form method="post" class="flex flex-col items-center">
						<input type="hidden" name="action" value="commerce/cart/update-cart">
						<input type="hidden" name="cartUpdatedNotice" value="Added {{ product.title }} to the cart.">
						{{ redirectInput('order') }}
						{{ csrfInput() }}
						<input type="hidden" name="purchasableId" value="{{ variant.id }}">
						<img src="{{ productImage.src }}" alt="" class="border-4 border-tag-yellow">
						<h2 class="tag text-black">{{ product.title }}</h2>
						<h2 class="tag text-tag-gold">{{ product.defaultVariant.salePriceAsCurrency }}</h2>
						<input type="submit" value="Buy Now" class="btn-alt tag bg-transparent cursor-pointer">
					</form>
				</div>
		</div>
	</div>
</section>
