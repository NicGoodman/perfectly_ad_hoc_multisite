{% set variant = product.defaultVariant %}


<section class="w-full flex flex-col items-center px-6 py-16 bg-tag-teal h-full flex-grow">
	<div class="w-full max-w-screen-xl">
		<div class="w-full flex flex-row flex-wrap">
			<div class="w-full md:w-2/3 p-12 flex flex-row flex-wrap">
				{% for image in product.productImages.all() %}
					{% set productImage = image.optimizedImages %}
					<div class="w-1/2 p-4">
						<img src="{{ productImage.src }}" alt="" class="border-4 border-tag-yellow">
					</div>
				{% endfor %}
			</div>
			<div class="w-full md:w-1/3 flex flex-col items-center p-12">
				<form method="post" class="flex flex-col items-center space-y-2">
					<input type="hidden" name="action" value="commerce/cart/update-cart">
					<input type="hidden" name="cartUpdatedNotice" value="Added {{ product.title }} to the cart.">
					{{ redirectInput('order') }}
					{{ csrfInput() }}
					<input type="hidden" name="qty" value="1">
					
					<h2 class="tag text-black">{{ product.title }}</h2>
					<p class="tag text-black">{{ product.productDescription }}</p>
                    {% if product.type=='shirts' %}
						<select name="purchasableId">
							{% for variant in product.variants %}
								<option value="{{ variant.id }}">{{ variant.size.label }}</option>
							{% endfor %}
						</select>
					{% else %}
						<input type="hidden" name="purchasableId" value="{{ variant.id }}">
					{% endif %}
					<h2 class="tag text-tag-gold">{{ product.defaultVariant.salePriceAsCurrency }}</h2>
					<input type="submit" value="Buy Now" class="btn-main tag cursor-pointer">
				</form>
			</div>

		</div>
	</div>
</section>
