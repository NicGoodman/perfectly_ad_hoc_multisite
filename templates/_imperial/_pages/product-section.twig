{% set variant = product.defaultVariant %}
<section class="flex flex-col items-center flex-grow w-full h-full px-6 py-16 bg-imp-aqua">
	<div class="w-full max-w-screen-xl">
		<div class="flex flex-row flex-wrap w-full">
			<div class="flex flex-row flex-wrap justify-end w-full p-4 md:w-1/2 lg:w-2/3 md:p-12">
				{% for image in product.productImages.all() %}
					{% set image = image.one() %}
					{% set productImage = image.one().optimizedImages %}
					<div class="flex-grow w-1/2 p-4">
						<a href="#" data-featherlight="{{ image.getUrl }}">
							<img src="{{ productImage.src }}" alt="" class="">
						</a>
					</div>
				{% endfor %}
			</div>
			<div class="flex flex-col items-center w-full p-4 md:w-1/2 lg:w-1/3 md:p-12">
				<form method="post" class="flex flex-col items-start space-y-2">
					<input type="hidden" name="action" value="commerce/cart/update-cart">
					<input type="hidden" name="cartUpdatedNotice" value="Added {{ product.title }} to the cart.">
					{{ redirectInput('order') }}
					{{ csrfInput() }}
					<input type="hidden" name="qty" value="1">

					<h2 class="text-black imp">{{ product.title }}</h2>
					<div class="text-black imp">{{ product.productDescription }}</div>
					{% if product.type=='shirts' %}
						<select name="purchasableId" class="block w-full py-2 pl-3 pr-10 mt-1 text-base leading-6 border-4 rounded-none form-select border-imp-red focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5">
							{% for variant in product.variants %}
								<option value="{{ variant.id }}">{{ variant.size.label }}</option>
							{% endfor %}
						</select>
					{% else %}
						<input type="hidden" name="purchasableId" value="{{ variant.id }}">
					{% endif %}
					<h2 class="imp text-imp-dark-gold">{{ variant.salePriceAsCurrency }}</h2>
					<input type="submit" value="Buy Now" class="rounded-none cursor-pointer btn-main imp">
				</form>
			</div>

		</div>
	</div>
</section>
