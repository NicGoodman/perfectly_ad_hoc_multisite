<section class="w-full flex flex-col items-center px-6 bg-imp-light-red py-16 angled-top">
	<div class="w-full max-w-screen-xl">
		{% set sectionHeader = entry.merchSectionContent.sectionHeader %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% include "_imperial/_snippets/heading" %}
		{% set products = craft.products().type('clothing') %}
		{% for product in products.all() %}
			{% set productImage = product.defaultVariant.productImage.one() %}
			{% set btnLink = "/buy/add?purchasableId={{product.defaultVariant.id}}" %}
			{% set btnText = "Buy Now" %}
			<div class="w-1/2 md:w-1/4 flex flex-col items-center">
				<img src="{{ productImage.getUrl }}" alt="" class="border-4 border-imp-gold">
				<h2 class="imp text-black">{{ product.title }}</h2>
				<h2 class="imp text-imp-light-grey">{{ product.defaultVariant.salePriceAsCurrency }}</h2>
				{% include "_imperial/_snippets/btn-alt" %}
			</div>
		{% endfor %}
	</div>
</section>
