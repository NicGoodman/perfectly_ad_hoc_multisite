<section class="flex flex-col items-center w-full px-6 py-16 bg-imp-aqua">
	<div class="flex flex-col items-center w-full max-w-screen-xl mb-12">
		{% set sectionHeader = entry.privateEventsSectionContent.sectionHeader %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% set textColor = 'text-imp-dark-aqua' %}
		{% set bodyText = entry.privateEventsSectionContent.bodyText %}
		{% set ctaText = entry.privateEventsSectionContent.callToActionText %}
		{% set ctaLink = entry.privateEventsSectionContent.callToActionLink %}
		{% include "_imperial/_snippets/heading" %}
		<div class="flex flex-row items-center w-full h-auto" style="{% if entry.privateEventsSectionContent.backgroundImage.one()|length %} {% set backgroundImage = entry.privateEventsSectionContent.backgroundImage.one().getUrl() %}background: url('{{ backgroundImage }}') no-repeat right/cover;{% endif %}">
			<div class="flex-col items-center hidden w-1/2 h-full md:flex">
				<div class="flex flex-col items-center justify-center w-full px-4 py-48 bg-imp-dark-aqua">
					<article class="text-center imp text-tag-light-grey">
						{{ bodyText }}
					</article>
				</div>
			</div>
			<div class="flex-col items-center hidden w-1/2 p-4 md:flex">
				{% include "_imperial/_snippets/btn-main.twig" %}
			</div>
		</div>
		<div class="flex flex-col items-center w-full p-4 md:hidden ">
			<div class="flex flex-col items-center w-full h-full p-4 bg-imp-aqua">
				<article class="text-center text-black imp">
					{{ bodyText }}
				</article>
			</div>
		</div>
		<div class="flex flex-col items-center w-full p-4 md:hidden">
			{% include "_imperial/_snippets/btn-main.twig" %}
		</div>
	</div>
</section>
