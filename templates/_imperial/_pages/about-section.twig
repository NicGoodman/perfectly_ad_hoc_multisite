<section class="w-full flex flex-col items-center px-6 bg-imp-light-grey py-16">
	<div class="w-full max-w-screen-xl flex flex-col items-center mb-12">
		{% set sectionHeader = entry.aboutSectionContent.sectionHeader %}
		{% set sectionContent = entry.aboutSectionContent.sectionContent %}
		{% set anchorLink = sectionHeader|replace(' ', '-')|lower %}
		{% set textColor = 'text-imp-dark-aqua' %}
		{% include "_imperial/_snippets/heading" %}
		<article class="flex flex-row-reverse flex-wrap items-center">
			{% for block in sectionContent.all() %}
				{% switch block.type %}
					{% case "bodyText" %}
						<article class="imp w-full md:w-2/3 text-center md:px-28 py-8">
							{{ block.bodyText }}
						</article>
				{% endswitch %}
			{% endfor %}
			{% for block in sectionContent.all() %}
				{% switch block.type %}
					{% case "image" %}
						{% set image = block.image.one().getUrl() %}
						{% set overlayHeader = block.overlayHeader %}
						{% set overlaySubheader = block.overlaySubheader %}
						{% set overlayBodyText = block.overlayBodyText %}
							<div class="p-4 flex flex-col items-center justify-end h-full w-1/3 h-64" style="background: url('{{ image }}') no-repeat center/cover;">
								{% if overlayHeader|length %}
									<div class="flex flex-col items-start p-4 w-full bg-imp-aqua mt-64">
										<header class="mb-2">
											<h2 class="imp leading-none">{{ overlayHeader }}</h2>
											<h5 class="imp text-imp-dark-red font-bold">{{ overlaySubheader }}</h5>
										</header>
										<article class="imp">
											{{ overlayBodyText }}
										</article>
									</div>
								{% endif %}
							</div>
				{% endswitch %}
			{% endfor %}
		</article>
	</div>
</section>
