<footer class="flex flex-col flex-wrap items-center justify-between w-full px-10 py-8 bg-black md:flex-row">
	{% set listClasses = 'block space-y-2 align-top' %}
	{% set address = entry.hoursSectionContent.address %}
	{% set hours = entry.hoursSectionContent.hours %}
	<nav class="" style="column-count: 2;">
		{% set navList = entry.headerContent.navigation.all() %}
		{% include "_imperial/_content/nav-item-list" %}
		{% set socialMediaList = entry.headerContent.socialMediaAccounts.all() %}
		{% include "_imperial/_content/social-media-links" %}
	</nav>
	<address class="w-full my-8 not-italic text-center md:w-2/5 lg:w-1/3 md:my-0">
		<a href="https://goo.gl/maps/b1R88RrjJU2dZ4cE6" target="_blank" rel="nofollow">
			<h5 class="mb-2 font-bold text-center text-imp-light-grey imp">{{ address | nl2br }}</h5>
		</a>
		<h5 class="font-bold text-center text-imp-light-grey imp">{{ hours | nl2br }}</h5>
	</address>
	{% set ctaLink = "mailto: imperialinfo@perfectlyadhoc.com" %}
	{% set ctaText = "Contact Us" %}
	{% include "_imperial/_snippets/btn-main" %}
</footer>
