<footer class="w-full flex flex-col md:flex-row flex-wrap bg-black items-center justify-between px-10 py-8">
	{% set listClasses = 'block' %}
	{% set address = entry.hoursSectionContent.address %}
	{% set hours = entry.hoursSectionContent.hours %}
	<nav class="" style="column-count: 2;">
		{% set navList = entry.headerContent.navigation.all() %}
		{% include "_imperial/_content/nav-item-list" %}
		{% set socialMediaList = entry.headerContent.socialMediaAccounts.all() %}
		{% include "_imperial/_content/social-media-links" %}
	</nav>
	<address class="not-italic text-center w-full md:w-2/5 lg:w-1/3 my-8 md:my-0">
		<a href="http://maps.google.com">
			<h5 class="text-imp-light-grey imp text-center font-bold mb-2">{{ address | nl2br }}</h5>
		</a>
		<h5 class="text-imp-light-grey imp text-center font-bold">{{ hours | nl2br }}</h5>
	</address>
	{% set btnLink = "tel:1-828-254-8980" %}
	{% set btnText = "Call Us" %}
	{% include "_imperial/_snippets/btn-alt" %}
</footer>
